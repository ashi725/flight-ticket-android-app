<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333853"
    android:paddingTop="20dp"
    android:paddingRight="30dp"
    android:paddingLeft="30dp"
    android:paddingBottom="20dp"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAVOURITES"
        android:id="@+id/continent_title"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:paddingBottom="10dp"/>

    <ImageView
        android:id="@+id/brokenHeart"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/broken_heart"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/noFavouritesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:fontFamily="@font/jostregular1"
        android:text="No Favourites"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_weight="1"
        android:visibility="gone" />

    <GridView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="4dp"
        android:id="@+id/countries"
        android:numColumns="2"
        android:layout_weight="1"
        >
    </GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/homeButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/home"/>

        <ImageView
            android:id="@+id/favouriteButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/categories"/>

        <ImageView
            android:id="@+id/searchButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/search"/>
    </LinearLayout>



</LinearLayout>