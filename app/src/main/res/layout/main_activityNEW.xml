<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333853"
    android:paddingTop="30dp"
    android:paddingRight="30dp"
    android:paddingLeft="30dp"
    android:paddingBottom="20dp"
    android:orientation="vertical"
    tools:context=".controllers.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jostbold"
            android:text="@string/greeting"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:layout_marginTop="25dp"/>

    </RelativeLayout>


    <android.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="#39405E"
        android:iconifiedByDefault="false"
        android:queryHint="Search Countries"
        android:searchIcon="@drawable/search"
        android:layout_gravity="center">

    </android.widget.SearchView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jostlight"
        android:text="MOST VIEWED COUNTRIES"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="8dp">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="#333853"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#2B3047">

            <ImageView
                android:id="@+id/icon_image_view"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/maori_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="OCEANIA"
                android:textColor="@color/white"
                android:fontFamily="@font/jostregular"
                android:textSize="25sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="20dp"
        android:backgroundTint="#333853"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#2B3047">

            <ImageView
                android:id="@+id/icon_image_view"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/maori_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="EUROPE"
                android:textColor="@color/white"
                android:fontFamily="@font/jostregular"
                android:textSize="25sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="20dp"
        android:backgroundTint="#333853"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#2B3047">

            <ImageView
                android:id="@+id/icon_image_view"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/maori_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="ASIA"
                android:textColor="@color/white"
                android:fontFamily="@font/jostregular"
                android:textSize="25sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="20dp"
        android:backgroundTint="#333853"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#2B3047">

            <ImageView
                android:id="@+id/icon_image_view"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/maori_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="NORTH AMERICA"
                android:textColor="@color/white"
                android:fontFamily="@font/jostregular"
                android:textSize="23sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="20dp"
        android:layout_weight="1"
        android:backgroundTint="#333853"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#2B3047">

            <ImageView
                android:id="@+id/icon_image_view"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/maori_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="SOUTH AMERICA"
                android:textColor="@color/white"
                android:fontFamily="@font/jostregular"
                android:textSize="23sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="31dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/home"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="31dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/categories"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="31dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/search"/>
    </LinearLayout>



</LinearLayout>