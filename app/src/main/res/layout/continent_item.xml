<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:backgroundTint="#333853"
    android:onClick="viewCategory"
    android:id="@+id/oceania"
    android:elevation="20dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginTop="20dp"
        android:background="#2B3047">

        <ImageView
            android:id="@+id/continent_icon"
            android:layout_width="70dp"
            android:layout_height="85dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:src="@drawable/south_africa3" />

        <TextView
            android:id="@+id/continent_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="OCEANIA"
            android:textColor="@color/white"
            android:fontFamily="@font/jostregular"
            android:textSize="25sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>